<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageButton
        android:id="@+id/add_new_user_image_button"
        android:scaleType="fitXY"
        android:layout_width="@dimen/add_new_width"
        android:layout_height="@dimen/add_new_height"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:src="@drawable/add_new_user" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/username_margin_bottom"
        android:text="@string/action_create"
        android:textColor="#ffffff"
        android:textSize="@dimen/username" >
    </TextView>

</RelativeLayout>