<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageButton
        android:id="@+id/planet_image_button"
        android:layout_width="@dimen/planet_image"
        android:layout_height="@dimen/planet_image"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/geomplanet" />

    <ImageView
        android:id="@+id/planet_locked_image"
        android:layout_width="@dimen/lock_image"
        android:layout_height="@dimen/lock_image"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/locked" />

    <TextView
        android:id="@+id/planet_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
       	android:gravity="center"
        android:layout_marginBottom="@dimen/planetname_margin_bottom"
        android:text="Geometicka planeta"
        android:textColor="#ffffff"
        android:textSize="@dimen/planetname" />

</RelativeLayout>