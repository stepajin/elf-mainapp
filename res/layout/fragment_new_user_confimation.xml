<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageButton
        android:id="@+id/new_user_confirm_button"
        android:layout_width="@dimen/add_new_width"
        android:layout_height="@dimen/add_new_height"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/add_new_user" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/user_editation_titles_margin_top"
        android:text="@string/action_accept"
        android:textColor="#ffffff"
        android:textSize="@dimen/user_editation_titles" />

</RelativeLayout>